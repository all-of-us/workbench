// TypeScript compile settings for Angular tests.
//
// This file is referred to from ui/angular.json
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // No outDir needs to be specified here, as test runs will not produce output files anyway.
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "types": [
      "jasmine",
      "node"
    ],
    "jsx": "react"
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
  ]
}
