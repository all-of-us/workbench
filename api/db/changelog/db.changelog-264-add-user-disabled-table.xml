<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet author="dolbeew" id="changelog-264-add-user-disabled-table">
    <createTable tableName="user_disabled">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_id" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="updated_by" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="update_time" type="datetime">
        <constraints nullable="false"/>
      </column>
      <column name="admin_comment" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="status" type="ENUM('DISABLED', 'ENABLED')">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addForeignKeyConstraint baseColumnNames="user_id"
      baseTableName="user_disabled"
      constraintName="fk_disabled_user_id"
      referencedColumnNames="user_id"
      referencedTableName="user" onDelete="CASCADE"/>
  </changeSet>
</databaseChangeLog>
